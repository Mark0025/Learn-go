{
  "version": 2,
  "builds": [
    {
      "src": "src/api/*.go",
      "use": "@vercel/go"
    },
    {
      "src": "src/html/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/images/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/src/html/index.html"
    },
    {
      "src": "/images/(.*)",
      "dest": "/src/images/$1"
    },
    {
      "src": "/html/(.*)",
      "dest": "/src/html/$1"
    },
    {
      "src": "/todos",
      "dest": "/src/api/index.go"
    },
    {
      "src": "/todos/(.*)",
      "dest": "/src/api/index.go"
    },
    {
      "handle": "filesystem"
    }
  ]
} 