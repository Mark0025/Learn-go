{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.go",
      "use": "@vercel/go"
    },
    {
      "src": "src/html/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/images/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/images/(.*)$",
      "dest": "/src/images/$1"
    },
    {
      "src": "^/static/(.*)$",
      "dest": "/src/html/$1"
    },
    {
      "src": "^/api/todos/?$",
      "dest": "/api/index.go"
    },
    {
      "src": "^/api/todos/(.*)$",
      "dest": "/api/index.go"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.go"
    }
  ]
} 